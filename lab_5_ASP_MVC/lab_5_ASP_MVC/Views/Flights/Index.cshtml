@model IEnumerable<lab_5_ASP_MVC.Models.Flight>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlaceDeparture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlaceArrival)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FlightTime)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Aircraft)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceDeparture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceArrival)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aircraft.AircraftId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FlightId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FlightId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FlightId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
